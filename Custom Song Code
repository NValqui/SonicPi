#Custom Song - The Real Slim Shady

use_bpm 105
whistle = "C:/Users/nicholas_valqui/Documents/Audacity/Death Whistle Sound Effect-YoutubeConvert.cc.wav"
h = 0.5
a = 0.07

sample whistle, amp: 2
sleep 18



1.times do
  live_loop :fade_in do
    a = a + 0.07
    sleep h
  end
  use_synth :piano
  play :c, amp: a
  sleep h
  play :eb, amp: a
  sleep h
  play :g, amp: a
  sleep h
  play :ab, amp: a
  sleep h
  play :c5, amp: a
  sleep 1.5
  play :ab, amp: a
  sleep h
  play :g, amp: a
  sleep 1.5
  play :ab, amp: a
  sleep h
  play :g, amp: a
  sleep 0.25
  play :ab, amp: a
  sleep 0.22
  play :g, amp: a
  sleep h
  play :f, amp: a
  sleep h
  play :g, amp: a
  sleep h
  play :b3, amp: a
  sleep h
end

live_loop :fade_in do
  stop
end

live_loop :s do
  play :c
  sleep h
  play :eb
  sleep h
  play :g
  sleep h
  play :ab
  sleep h
  play :c5
  sleep 1.5
  play :ab
  sleep h
  play :g
  sleep 1.5
  play :ab
  sleep h
  play :g
  sleep 0.25
  play :ab
  sleep 0.22
  play :g
  sleep h
  play :f
  sleep h
  play :g
  sleep h
  play :b3
  sleep h
end

reset
sleep 8.47

live_loop :bass do
  with_fx :compressor do
    play :e1, amp: 2
    sleep 1
    play :d2, amp: 2
    sleep h
    play :e2, amp: 2
    sleep h
    play :f2, amp: 2
    sleep 1.5
    play :f2, amp: 2
    sleep h
    play :e2, amp: 2
    sleep 1.5
    play :e2, amp: 2
    sleep h
    play :d2, amp: 2
    sleep 2.47
  end
end

sleep 8.47

live_loop :snare do
  sample :elec_snare
  sleep 4
end
